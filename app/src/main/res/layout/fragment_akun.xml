<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.akun.AkunFragment"
    android:padding="@dimen/_15sdp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UselessParent"
        android:gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            app:cardCornerRadius="@dimen/_25sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/inisial"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/hz"
                    android:gravity="center"
                    android:textSize="@dimen/_25ssp"
                    android:textStyle="bold"
                    android:background="@color/colorPrimary_400"
                    android:textColor="@color/white"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_10sdp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nama"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:textColor="@color/dark"/>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_tlp"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"/>

        </LinearLayout>


    </LinearLayout>

        <ImageView
            android:id="@+id/btn_update"
            style="@style/image_clickable"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_edit" />


    </RelativeLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btn_toko"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Button.OutlineBox"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="RelativeOverlap,UselessParent"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/tv_nama_toko"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mulai_bisnis"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"/>

                <TextView
                    android:id="@+id/tv_status_toko"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buka_toko"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12ssp"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:textSize="@dimen/_25ssp"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/_20sdp"/>


</LinearLayout>